options:
	P: <grey>[<light blue>BloodDiamonds2.0<grey>]&r

command /blooddiamonds2 <text>:
	permission: skript.op
	aliases: /bd2
	trigger:
		if arg-1 is "on" or "enable" or "true" or "start":
			if {BloodDiamonds2::Enabled} is set:
				message "{@P} Blood Diamonds 2.0 is already enabled!"
			else:
				set {BloodDiamonds2::Enabled} to true
				broadcast "{@P} Blood Diamonds 2.0 is now enabled!"
		else if arg-1 is "off":
			if {BloodDiamonds2::Enabled} is not set:
				message "{@P} Blood Diamonds 2.0 is already disabled!"
			else:
				delete {BloodDiamonds2::*}
				broadcast "{@P} Blood Diamonds 2.0 is now disabled!"
 
on right click with pickaxe:
	{BloodDiamonds2::Enabled} is set
	add 1 to {BloodDiamonds2::%player%}
	if {BloodDiamonds2::%player%} is 1:
		message "{@P} Gain a permanent half a heart without getting a diamond" to the player
	if {BloodDiamonds2::%player%} is 2:
		message "{@P} Get 3 gold instead of a diamond for the cost of a permanent half a heart" to the player
	if {BloodDiamonds2::%player%} is 3:
		message "{@P} Get 3 diamonds while losing a heart of your permanent health" to the player
	if {BloodDiamonds2::%player%} is larger than 3:
		delete {BloodDiamonds2::%player%}
		message "{@P} Get the diamond but take half a heart of damage" to the player
 
on mine of diamond ore:
	{BloodDiamonds2::Enabled} is set
	if {BloodDiamonds2::%player%} is not set:
		damage the player by .5 hearts
	if {BloodDiamonds2::%player%} is 1:
		cancel the event
		set event-block to air
		set max health of player to ((max health of player)+0.5)
	if {BloodDiamonds2::%player%} is 2:
		cancel the event
		set event-block to air
		give 3 gold ore to player
		set max health of player to ((max health of player)-0.5)
	if {BloodDiamonds2::%player%} is 3:
		cancel the event
		set event-block to air
		drop 3 diamonds at the event-block
		set max health of player to ((max health of player)-1)
